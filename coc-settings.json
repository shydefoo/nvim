{
  "suggest.noselect": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "args": ["-remote=auto"],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "disableDiagnostics": false
    }
  },
  "diagnostic.displayByAle": true,
  "diagnostic.autoRefresh": true,
  "go": {
    "goplsPath": "gopls",
    "goplsArgs": ["-remote=auto"],
    "buildFlags": []
  }
}
